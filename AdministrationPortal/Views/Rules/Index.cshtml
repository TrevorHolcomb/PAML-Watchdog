@using WatchdogDatabaseAccessLayer.Models
@model AdministrationPortal.ViewModels.Rules.IndexRulesViewModel

@{
    ViewBag.Title = "Rules";
}

<h2>Rules</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@Model.GetMessage()

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => new Rule().Name)
        </th>
        <th>
            @Html.DisplayName("Message Type")
        </th>
        <th>
            @Html.DisplayName("Expression")
        </th>
        <th>
            @Html.DisplayName("Support Category")
        </th>
        <th>
            @Html.DisplayNameFor(model => new AlertType().Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.Rules) {
    <tr>
        <td class="rule-name">
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MessageType.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Expression)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SupportCategory.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>

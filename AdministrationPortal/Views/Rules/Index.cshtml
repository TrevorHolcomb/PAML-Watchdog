    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MessageType.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Expression)
        </td>

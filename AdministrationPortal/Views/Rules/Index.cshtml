@model IEnumerable<WatchdogDatabaseAccessLayer.Models.Rule>

@{
    ViewBag.Title = "Rules";
}

<h2>Rules</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayName("Message Type")
        </th>
        <th>
            @Html.DisplayName("Expression")
        </th>
        <th>
            @Html.DisplayName("Support Category")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AlertType.Name)
        </th>

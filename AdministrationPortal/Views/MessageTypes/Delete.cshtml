@model AdministrationPortal.ViewModels.MessageTypes.DeleteMessageTypeViewModel

@Model.PageTitle

<h2>Delete</h2>

<h3>
    @Model.PageHeaderMessage
</h3>
<div>
    <h4>MessageType</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.MessageType.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MessageType.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.MessageType.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MessageType.Description)
        </dd>

        <dt>
            Parameters
        </dt>

        <dd>
            <ul>
                @foreach (var parameter in Model.MessageType.MessageTypeParameterTypes)
                {
                    <li>
                        @parameter.Name, @parameter.Type
                    </li>
                }
            </ul>
        </dd>


    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default @Model.ButtonClass()" @Model.ButtonState()/>
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>

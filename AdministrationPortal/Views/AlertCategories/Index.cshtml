@using WatchdogDatabaseAccessLayer.Models
@model AdministrationPortal.ViewModels.AlertCategories.IndexAlertCategoriesViewModel

@{
    ViewBag.Title = "Alert Categories";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@Model.GetMessage()

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => new AlertCategory().CategoryName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.AlertCategories) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CategoryName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>

@using WatchdogDatabaseAccessLayer.Models
@model AdministrationPortal.ViewModels.RuleCategories.IndexRuleCategoriesViewModel

@{
    ViewBag.Title = "Rule Categories";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Rule Categories</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@Model.GetMessage()

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => new RuleCategory().Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => new RuleCategory().Description)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.RuleCategories) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>

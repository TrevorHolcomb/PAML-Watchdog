{
  "$schema": "http://json-schema.org/draft-04/schema",
  "title": "Rule Schema",
  "description": "the schema for validating rule triggers",
  "type": "object",

  "required": [ "comparator", "variable", "constant" ],
  "properties": {
    "server": {
      "type": "string",
      "maxLength": 256
    },
    "origin": {
      "type": "string",
      "maxLength": 256
    },
    "comparator": {
      "type": "string",
      "enum": [ "eq", "neq", "gt", "gte", "lt", "lte" ]
    },
    "variable": {
      "type": "string",
      "maxLength": 256
    },
    "constant": {
      "type": "number"
    }
  }
}
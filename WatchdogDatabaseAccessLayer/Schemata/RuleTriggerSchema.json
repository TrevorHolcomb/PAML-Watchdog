{
  "$schema": "http://json-schema.org/draft-04/schema",
  "title": "Rule Schema",
  "description": "DEPRECATED",
  "type": "object",

  "required": [ "params" ],
  "properties": {
    "server": {
      "type": "string",
      "maxLength": 256
    },
    "origin": {
      "type": "string",
      "maxLength": 256
    },
    "params": {
      "oneOf": [
        { "$ref": "#/definitions/and" },
        { "$ref": "#/definitions/or"  },
        { "$ref": "#/definitions/not" },
        { "$ref": "#/definitions/xor" }
      ]
    }

  },
  "definitions": {
    "comparison": {
      "type": "object",
      "required": [ "comparator", "variable", "constant" ],
      "properties": {
        "comparator": {
          "type": "string",
          "enum": [ "eq", "neq", "gt", "gte", "lt", "lte" ]
        },
        "variable": {
          "type": "string",
          "maxLength": 256
        },
        "constant": {
          "oneOf": [
            { "type": "boolean" },
            { "type": "null" },
            { "type": "number" },
            { "type": "string" }
          ]
        }
      }
    },
    "and": {
      "allOf": [ { "$ref": "#/definitions/comparison" } ]
    },
    "or": {
      "anyOf": [ { "$ref": "#/definitions/comparison" } ]
    },
    "not": {
      "not": { "$ref": "#/definitions/comparison" }
    },
    "xor": {
      "oneOf": [{"$ref": "#/definitions/comparison"}]
    }
  }
} 

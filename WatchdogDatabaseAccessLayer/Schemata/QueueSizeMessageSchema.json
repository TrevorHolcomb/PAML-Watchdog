{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Queue Size Message Schema",
  "description": "The schema for validating queue size messages",
  "type": "object",

  "required": [ "server", "origin", "messageTypeId", "params" ],
  "properties": {
    "server": {
      "type": "string"
    },
    "origin": {
      "type": "string"
    },
    "messageTypeId": {
      "type": "integer",
      "minimum": 0,
      "maximum": 0
    },
    "params": {
      "type": "object",
      "required": [ "queueSize" ],
      "properties": {
        "queueSize": {
          "type": "integer",
          "minimum": 0
        }
      }
    }
  }
}
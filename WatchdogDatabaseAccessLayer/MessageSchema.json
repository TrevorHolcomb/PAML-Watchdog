{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Message Schema",
  "description": "the schema for validating message formats",
  "type": "object",
  "required": [ "messageTypeId", "params" ],

  "properties": {
    "messageTypeId": {
      "type": "integer",
      "minimum": 0
    },
    "params": {
      "type": "object",
      "minProperties": 2,
      "properties": {
        "server": {
          "type": "string",
          "maxLength": 128
        },
        "origin": {
          "type": "string",
          "maxLength": 128
        }
      },
      "required": [ "server", "origin" ]
    }
  }
}
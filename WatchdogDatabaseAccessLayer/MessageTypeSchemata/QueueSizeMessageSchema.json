{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Queue Size Message Schema",
  "description": "schema for validating queue size messages",
  "type": "object",
  "required": [ "messageTypeId", "params" ],
  "properties": {
    "messageTypeId": {
      "type": "integer",
      "maximum": 0
    },
    "params": {
      "type": "object",
      "required": [ "queueSize" ],
      "properties": {
        "queueSize": {
          "type": "integer",
          "minimum": 0
        }
      }
    }
  }
}